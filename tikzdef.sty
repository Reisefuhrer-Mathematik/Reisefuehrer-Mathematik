%%% Bonbons
\newcommand{\bonbon}[3]{
    \begin{scope}[shift={(#2)}]
        \fill[#1!50!black] (-.3, -.2) -- (-.3, .2) -- (0, 0) -- cycle;
        \fill[#1!50!black] (.3, -.2) -- (.3, .2) -- (0, 0) -- cycle;
        \fill[#1] (0,0) circle (.2);
        \node[white, font=\bfseries] at (0,0) {#3};
    \end{scope}
}
