\newcounter{possaveslot}
\newcommand{\pushxpos}{%
    \stepcounter{possaveslot}%
    \zsaveposx{\thepossaveslot}%
}
\newcommand{\getxpos}{%
    \zposx{\thepossaveslot}sp%
}
