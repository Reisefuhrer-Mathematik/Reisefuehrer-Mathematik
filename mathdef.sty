\newcommand{\colorbrace}[2]{%
    \ensuremath{%
        \textcolor{maincolor}{%
            \underbrace{\color{black}#1}_{\makebox(0,0){%
                \ensuremath{\scriptstyle #2}%
            }}%
        }%
    }%
}
